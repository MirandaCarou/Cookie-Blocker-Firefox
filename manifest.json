{
  "name": "Cookie cracker",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Bloquea cookies no esenciales",
  "icons": {
    "128": "icons/cookie.png"
  },
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "./Handlers/handler.js",
        "./Handlers/didomi.js",
        "./Handlers/oneTrust.js",
        "./Handlers/cookieYes.js",
        "./Handlers/cookieNotice.js",
        "setUp.js",
        "content-script.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/cookie.png",
      "32": "icons/cookie.png",
      "48": "icons/cookie.png",
      "128": "icons/cookie.png"
    }
  },
  "applications": {
    "gecko": {
      "id": "{daf44bf7-a45e-4450-979c-91cf07434c3d}"
    }
  }
}
